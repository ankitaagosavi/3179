{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 450,
  "title": "Formula 1 Circuits Around the World",
  "projection": {"type": "equalEarth"},
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/ankitaagosavi/3179/main/Week%209%20Homework/js/WorldMapWithGraticules.topojson",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
      "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "black"}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/2_symbol_map/js/WorldMapWithGraticules.topojson",
        "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}
      },
      "mark": {"type": "geoshape", "fill": null, "stroke": "lightgray"}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/ankitaagosavi/3179/main/Week%209%20Homework/data/circuits%20copy.csv"
      },
      "mark": {"type": "circle", "tooltip": {"content": "data"}, "size": 75},
      "encoding": {
        "longitude": {"field": "Longitude", "type": "quantitative"},
        "latitude": {"field": "Latitude", "type": "quantitative"},
        "color": {
          "field": "Number of Grands Prix",
          "type": "quantitative",
          "title": "Number of Grands Prix Held",
          "scale": {"scheme": "reds"}
        },
        "tooltip": [
          {"field": "circuitId", "type": "quantitative"},
          {"field": "Circuit Name", "type": "nominal"},
          {"field": "Location", "type": "nominal"},
          {"field": "Country", "type": "nominal"},
          {"field": "Latitude", "type": "quantitative", "format": ","},
          {"field": "Longitude", "type": "quantitative", "format": ".2f"},
          {"field": "Number of Grands Prix", "type": "quantitative"}
        ]
      }
    }
  ]
}
